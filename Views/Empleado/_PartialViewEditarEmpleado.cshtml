@model ProyectoTallerMecanico.Models.Empleado

<hr />
<div class="row">
	<form class="col s12" id="formEditar">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<input type="hidden" asp-for="IdEmpleado" />
		<div class="row">
			<i class="material-icons prefix">account_circle</i>
			<label asp-for="Nombre">Nombre</label>
			<input asp-for="Nombre" class="validate" />
			<span asp-validation-for="Nombre" class="text-danger"></span>
		</div>
		<div class="row">
			<i class="material-icons prefix">directions</i>
			<label asp-for="Direccion">Dirección</label>
			<input asp-for="Direccion" class="validate" />
			<span asp-validation-for="Direccion" class="text-danger"></span>
		</div>
		<div class="row">
			<i class="material-icons prefix">contact_phone</i>
			<label asp-for="Telefono"></label>
			<input asp-for="Telefono" class="validate" />
			<span asp-validation-for="Telefono" class="text-danger"></span>
		</div>
		<div class="row">
			<i class="material-icons prefix">attach_money</i>
			<label asp-for="Sueldo"></label>
			<input asp-for="Sueldo" class="validate" />
			<span asp-validation-for="Sueldo" class="text-danger"></span>
		</div>
	</form>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
